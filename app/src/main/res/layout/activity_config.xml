<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <com.gc.materialdesign.views.ButtonRectangle
            android:id="@+id/btn_zona"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/red_500"
            android:text="@string/btn_zone"
            android:onClick="btnZona" />
        <com.gc.materialdesign.views.ButtonRectangle
            android:id="@+id/btn_twitter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/blue_500"
            android:text="@string/btn_twitter"
            android:onClick="btnSelecTwitter" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:onClick="btnZona">

        <com.gc.materialdesign.views.ButtonRectangle
            android:id="@+id/btn_tlf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/lime_500"
            android:text="@string/btn_phone"
            android:onClick="btnSelecTelf" />

        <com.gc.materialdesign.views.ButtonRectangle
            android:id="@+id/btn_bloquear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/orange_500"
            android:text="@string/bloquear"
            android:onClick="btnBloquear" />

    </LinearLayout>

</LinearLayout>
