<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:materialdesign="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:longClickable="false"
        android:weightSum="1">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_weight="0.50">

        <com.gc.materialdesign.views.ButtonRectangle
            android:id="@+id/btn_sos"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/red_900"
            android:text="@string/btn_sos"
            android:onClick="btnSos"
            android:layout_weight="0.50" />

        <com.gc.materialdesign.views.ButtonRectangle
            android:id="@+id/btn_twitter"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/light_blue_700"
            android:text="@string/btn_twitter"
            android:onClick="btnTwitter"
            android:layout_weight="0.50" />

        </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:onClick="btnZona"
        android:gravity="center_horizontal"
        android:layout_weight="0.50">

        <com.gc.materialdesign.views.ButtonRectangle
            android:id="@+id/btn_telefono"
            android:layout_width="0.50dp"
            android:layout_height="match_parent"
            android:background="@color/teal_900"
            android:text="@string/btn_phone"
            android:onClick="btnTelefono"
            android:layout_weight="0.5" />

        <com.gc.materialdesign.views.ButtonRectangle
            android:id="@+id/btn_config"
            android:layout_width="0.50dp"
            android:layout_height="match_parent"
            android:background="@color/grey_700"
            android:text="@string/btn_settings"
            android:onClick="btnConfig"
            android:layout_weight="0.5" />
        </LinearLayout>

</LinearLayout>
