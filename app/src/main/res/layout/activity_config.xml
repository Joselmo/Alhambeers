<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:longClickable="false"
    android:weightSum="1">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_weight="0.50">

        <com.gc.materialdesign.views.ButtonRectangle
            android:id="@+id/btn_zona"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/red_500"
            android:text="@string/btn_zone"
            android:onClick="btnZona"
            android:layout_weight="0.5" />
        <com.gc.materialdesign.views.ButtonRectangle
            android:id="@+id/btn_twitter"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/blue_500"
            android:text="@string/btn_twitter"
            android:onClick="btnSelecTwitter"
            android:layout_weight="0.5" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:onClick="btnZona"
        android:gravity="center_horizontal"
        android:layout_weight="0.50">

        <com.gc.materialdesign.views.ButtonRectangle
            android:id="@+id/btn_tlf"
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/lime_500"
            android:text="@string/btn_phone"
            android:onClick="btnSelecTelf"
            android:layout_weight="0.5" />

        <com.gc.materialdesign.views.ButtonRectangle
            android:id="@+id/btn_bloquear"
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/orange_500"
            android:text="@string/bloquear"
            android:onClick="btnBloquear"
            android:layout_weight="0.5" />

    </LinearLayout>

</LinearLayout>
